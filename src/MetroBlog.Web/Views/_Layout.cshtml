<!DOCTYPE html>
<html>
<head>
    <title>@ViewBag.Title</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta charset="UTF-8" />

    <!-- Bootstrap -->
    <link href="~/public/assets/css/vendor/bootstrap/bootstrap.min.css" rel="stylesheet">
    <link href="http://libs.useso.com/js/font-awesome/4.0.3/css/font-awesome.min.css" rel="stylesheet">
    <link rel="stylesheet" href="~/public/assets/css/vendor/animate/animate.min.css">
    <link type="text/css" rel="stylesheet" media="all" href="~/public/assets/js/vendor/mmenu/css/jquery.mmenu.all.css" />
    <link rel="stylesheet" href="~/public/assets/js/vendor/videobackground/css/jquery.videobackground.css">
    <link rel="stylesheet" href="~/public/assets/css/vendor/bootstrap-checkbox.css">

    <link rel="stylesheet" href="~/public/assets/js/vendor/rickshaw/css/rickshaw.min.css">
    <link rel="stylesheet" href="~/public/assets/js/vendor/morris/css/morris.css">
    <link rel="stylesheet" href="~/public/assets/js/vendor/tabdrop/css/tabdrop.css">
    <link rel="stylesheet" href="~/public/assets/js/vendor/summernote/css/summernote.css">
    <link rel="stylesheet" href="~/public/assets/js/vendor/summernote/css/summernote-bs3.css">
    <link rel="stylesheet" href="~/public/assets/js/vendor/chosen/css/chosen.min.css">
    <link rel="stylesheet" href="~/public/assets/js/vendor/chosen/css/chosen-bootstrap.css">
    <link href="~/public/assets/css/minimal.css" rel="stylesheet">
    <link href="~/public/js/modules/layer/skin/layer.css" rel="stylesheet" />
    <link href="~/public/js/modules/layer/skin/layer.ext.css" rel="stylesheet" />

    <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
      <script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
      <script src="https://oss.maxcdn.com/libs/respond.js/1.3.0/respond.min.js"></script>
    <![endif]-->
</head>
<body class="bg-1">
    <!-- Wrap all page content here -->
    <div id="wrap">




        <!-- Make page fluid -->
        <div class="row">





            <!-- Fixed navbar -->
            <div class="navbar navbar-default navbar-fixed-top navbar-transparent-black mm-fixed-top" role="navigation" id="navbar">



                <!-- Branding -->
                <div class="navbar-header col-md-2">
                    <a class="navbar-brand" href="index.html">
                        <strong>MIN</strong>IMAL
                    </a>
                    <div class="sidebar-collapse">
                        <a href="#">
                            <i class="fa fa-bars"></i>
                        </a>
                    </div>
                </div>
                <!-- Branding end -->
                <!-- .nav-collapse -->
                <div class="navbar-collapse">

                    <!-- Page refresh -->
                    <ul class="nav navbar-nav refresh">
                        <li class="divided">
                            <a href="#" class="page-refresh"><i class="fa fa-refresh"></i></a>
                        </li>
                    </ul>
                    <!-- /Page refresh -->
                    <!-- Sidebar -->
                    <ul class="nav navbar-nav side-nav" id="sidebar">

                        <li class="collapsed-content">
                            <ul>
                                <li class="search"><!-- Collapsed search pasting here at 768px --></li>
                            </ul>
                        </li>

                        <li class="navigation">
                            <a href="javascript:" class="sidebar-toggle">内容管理</a>

                            <ul class="menu">

                                <li class="dropdown">
                                    <a href="/admin/article">
                                        <i class="fa fa-pencil"></i> 添加文章
                                    </a>
                                </li>



                                <li class="dropdown">
                                    <a href="/admin/articlelist">
                                        <i class="fa fa-list"></i> 文章管理
                                    </a>
                                </li>

                                <li class="dropdown">
                                    <a href="/admin/category">
                                        <i class="fa fa-category"></i> 文章分类
                                    </a>
                                </li>

                                <li class="dropdown">
                                    <a href="/admin/tag">
                                        <i class="fa fa-tag"></i> 标签管理
                                    </a>
                                </li>




                            </ul>

                        </li>

                        <li class="navigation">
                            <a href="javascript:;" class="sidebar-toggle underline">网站管理</a>
                            <ul class="menu">
                                <li class="dropdown">
                                    <a href="/admin/menu">
                                        <i class="fa fa-menu"></i> 导航菜单
                                    </a>
                                </li>

                                <li class="dropdown">
                                    <a href="/admin/setting/system">
                                        <i class="fa fa-tag"></i> 站点设置
                                    </a>
                                </li>
                                <li class="dropdown">
                                    <a href="/admin/setting/comment">
                                        <i class="fa fa-tag"></i> 评论设置
                                    </a>
                                </li>
                            </ul>

                        </li>


                    </ul>
                    <!-- Sidebar end -->





                </div>
                <!--/.nav-collapse -->





            </div>
            <!-- Fixed navbar end -->
            <!-- Page content -->
            <div id="content" class="col-md-12">
                <!-- page header -->
                <div class="pageheader">


                    <h2>
                        <i class="fa fa-@ViewBag.Icon"></i> @ViewBag.Title
                        @if (ViewBag.Description != null && !String.IsNullOrEmpty(ViewBag.Description))
                        {
                            <span>@ViewBag.Description</span>
                        }
                    </h2>


                </div>
                <!-- /page header -->
                <!-- content main container -->
                <div class="main">

                    @RenderBody()
                </div>
                <!-- /content container -->
            </div>
            <!-- Page content end -->






        </div>
        <!-- Make page fluid-->




    </div>
    <!-- Wrap all page content end -->



    <section class="videocontent" id="video"></section>
    <script src="/public/js/modules/jquery.js"></script>

    <script src="/public/assets/js/vendor/bootstrap/bootstrap.min.js"></script>
    <script type="text/javascript" src="/public/assets/js/vendor/mmenu/js/jquery.mmenu.min.js"></script>
    <script type="text/javascript" src="/public/assets/js/vendor/sparkline/jquery.sparkline.min.js"></script>

    <script type="text/javascript" src="/public/assets/js/vendor/nicescroll/jquery.nicescroll.min.js"></script>

    <script type="text/javascript" src="/public/assets/js/vendor/animate-numbers/jquery.animateNumbers.js"></script>
    <script type="text/javascript" src="/public/assets/js/vendor/videobackground/jquery.videobackground.js"></script>
    <script type="text/javascript" src="/public/assets/js/vendor/blockui/jquery.blockUI.js"></script>

    <script src="/public/assets/js/vendor/flot/jquery.flot.min.js"></script>
    <script src="/public/assets/js/vendor/flot/jquery.flot.time.min.js"></script>
    <script src="/public/assets/js/vendor/flot/jquery.flot.selection.min.js"></script>
    <script src="/public/assets/js/vendor/flot/jquery.flot.animator.min.js"></script>
    <script src="/public/assets/js/vendor/flot/jquery.flot.orderBars.js"></script>
    <script src="/public/assets/js/vendor/easypiechart/jquery.easypiechart.min.js"></script>

    <script src="/public/assets/js/vendor/rickshaw/raphael-min.js"></script>
    <script src="/public/assets/js/vendor/rickshaw/d3.v2.js"></script>
    <script src="/public/assets/js/vendor/rickshaw/rickshaw.min.js"></script>

    <script src="/public/assets/js/vendor/morris/morris.min.js"></script>

    <script src="/public/assets/js/vendor/tabdrop/bootstrap-tabdrop.min.js"></script>

    <script src="/public/assets/js/vendor/summernote/summernote.min.js"></script>

    <script src="/public/assets/js/vendor/chosen/chosen.jquery.min.js"></script>

    <script src="/public/assets/js/minimal.min.js"></script>

    <script src="/public/sea-debug.js"></script>
    <script type="text/javascript">
        seajs.config({
            base: "/public/js/viewmodels/",
            alias: {}
        })
    </script>
    @RenderSection("script", false)
</body>
</html>

