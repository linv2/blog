@{
    ViewBag.Title = Model["site_title"];
}
<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8" />

    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewBag.Title</title>
    <link href="/Themes/Default/css/pure-min.css" rel="stylesheet" />
    <link href="/Themes/Default/css/public.css" rel="stylesheet" />
    <!--[if lte IE 8]>
    <link href="/Themes/Default/css/grids-responsive-old-ie-min.css" rel="stylesheet" />
    <![endif]-->
    <!--[if gt IE 8]><!-->
    <link href="/Themes/Default/css/grids-responsive-min.css" rel="stylesheet" />
    <!--<![endif]-->
    <!--[if lte IE 8]>
    <link rel="stylesheet" href="/Themes/Default/css/blog-old-ie.css?_v=1">
    <![endif]-->
    <!--[if gt IE 8]><!-->
    <link href="/Themes/Default/css/blog.css?_v=1" rel="stylesheet" />
    <!--<![endif]-->
</head>
<body>
    <div id="layout" class="pure-g">
        <div class="sidebar pure-u-1 pure-u-md-1-5">
            <div class="header">
                <h1 class="brand-title">@Model["site_title"]</h1>
                @*<h2 class="brand-tagline">$blog_title</h2>*@

                <nav class="nav">
                    <ul class="nav-list">
                        @foreach (var menuItem in Model.Menu)
                        {
                            <li>  <a class="pure-button" href="@menuItem.Link">@menuItem.Name</a></li>
                        }
                    </ul>
                </nav>
            </div>
        </div>
        <div class="content pure-u-1 pure-u-md-4-5">

            @RenderBody()
        </div>
    </div>
    </div>
</body>
</html>
